<section id="contact">
  <div class="container">
      <div class="row">
          <div class="col-lg-12 text-center">

              <h2>CONTATO</h2>
              <hr class="star-primary">
          </div>
        </div>


        <div class="row">
        <div class="col-lg-8 col-lg-offset-2">

        <%= simple_form_for @contact do |f| %>

          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Nome</label>
            <%= f.text_field :name, :label => "", :required => true, :class => 'form-control', :placeholder =>  'Bota o nome'%>
            <p></p>
          </div>

          <div class="form-group col-xs-12 floating-label-form-group controls">                            
           <label>E-mail</label>
            <%= f.text_field :email, :label => "" , :required => true, :class => 'form-control', :placeholder =>  'Bota o e-mail da sua mãe aquela gostosa'  %>
            <p></p>
          </div>

        <div class="form-group col-xs-12 floating-label-form-group controls">
          <label>Assunto</label>  
            <%= f.select :subject,  ["Reportar Problema", "Sugestão" , "Elogio" , "Contato Comercial" , "Outro"], :label => "", include_blank: false, :class => 'dropit'  %>
            <p></p>
          </div>

          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Mensagem</label>
            <%= f.text_area :message, :label => "" ,:as => :text, :required => true, :class => 'form-control', :placeholder =>  'Manda a mensagem, seu viado',:rows => 5 %>
            <p></p>
          </div>

          <div class="form-group col-xs-12 floating-label-form-group controls">
            <%= f.button :submit, 'Enviar', :class=> 'btn btn-success btn-lg' %>
          </div>
        <% end %>


        </div>
        </div>

    </div>
  </div>
</section>

