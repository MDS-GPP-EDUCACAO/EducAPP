<%= simple_form_for @contact do |f| %>

          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Nome</label>
            <%= f.text_field :name, :label => "", :required => true, :class => 'form-control', :placeholder =>  'Seu nome aqui', :input_html => {:maxlength => 120, :size => 20}%>
            <p></p>
          </div>

          <div class="form-group col-xs-12 floating-label-form-group controls">                            
           <label>E-mail</label>
            <%= f.input :email , :label => "" , :required => true, :class => 'form-control', :placeholder =>  'Insira seu email', :input_html => {:maxlength => 120, :size => 20} %>
            <p></p>
          </div>

        <div class="form-group col-xs-6 floating-label-form-group controls">
          <label>Assunto</label>  
            <%= f.select :subject,  ["Reportar Problema", "SugestÃ£o", "Contato" , "Outro"], :label => "", include_blank: false, :id => 'contact_subject' %>
          </div>    

            <div id="outro" class="form-group col-xs-12 floating-label-form-group controls">
            <%= f.input :outro , :label => "", :required => false, :class => 'form-control', :placeholder =>  'Outro (especifique)', :input_html => {:maxlength => 120, :size => 20} %>
            <p></p>
          </div>


          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Mensagem</label>
            <%= f.input :message, :label => "" ,:as => :text, :required => true, :class => 'form-control', :placeholder =>  'Mensagem',:rows => 5, :input_html => {:maxlength => 500, :size => 20}%>
            <p></p>
          </div>

          <div class="form-group col-xs-12 floating-label-form-group controls">
            <%= f.button :submit, 'Enviar', :class=> 'btn btn-success btn-lg' %>
          </div>
        <% end %>
