<%= form_tag("/ranking/request_ranking.json", id: "new-ranking-request", method: "get", remote: true, :class =>'form-inline') do %>

  <div class="center-div">
    <div class="form-group-ranking">
    <%= label_tag(:year, "Ano") %>
    <%= select_tag(:year, options_for_select(Rate.all.pluck(:year).uniq.sort!), class: 'form-control') %>
    </div>
    <div class="form-group-ranking">
    </div>

    <div class="form-group-ranking">
    <%= label_tag(:grade, "Turma") %>
    <%= select_tag(:grade, options_for_select(Grade.all.pluck(:grade).uniq.sort!), class: 'form-control'  ) %>
    </div>

    <div class="form-group-ranking">
    <%= submit_tag("Gerar Ranking", :class => 'btn btn-primary') %>
  </div>
<% end %>



